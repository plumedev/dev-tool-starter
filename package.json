{
  "devDependencies": {
    "browser-sync": "^2.27.11",
    "concurrently": "^7.6.0",
    "node-sass": "^8.0.0",
    "vite": "^4.1.1"
  },
  "scripts": {
    "build-css": "node-sass --output-style compressed assets/sass/styles.scss assets/css/custom.css",
    "start": "npm run build-css & browser-sync start --server --files \"assets/**/*.html, assets/**/*.scss, assets/css/*.css\" --no-notify --no-online --watch",
    "watch-css": "node-sass assets/sass/styles.scss assets/css/custom.css -w",
    "dev": "concurrently \"npm run start\" \"npm run watch-css\""
  }
}
